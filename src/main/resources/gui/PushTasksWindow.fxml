<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
    <fx:define>
        <Double fx:id="BORDER_SPACING" fx:value="5.0"/>
    </fx:define>
    <VBox fx:id="prevDayTasksHolder" spacing="-2.0"
                AnchorPane.topAnchor="$BORDER_SPACING" AnchorPane.bottomAnchor="$BORDER_SPACING"
                AnchorPane.leftAnchor="$BORDER_SPACING" AnchorPane.rightAnchor="$BORDER_SPACING"
                alignment="CENTER">
        <Region minHeight="10.0" />
        <Button text="Move to next day"
                    focusTraversable="false"
                    onMousePressed="#registerMove" />
        <Region minHeight="10.0" />
    </VBox>
</AnchorPane>
