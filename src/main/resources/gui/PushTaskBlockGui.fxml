<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="block"
      stylesheets="@TaskBlock.css"
      styleClass="box-layout">
    <BorderPane>
        <left>
            <Label fx:id="blockHeaderLabel" styleClass="label-header" />
        </left>
        <right>
            <ToggleButton fx:id="selectButton"
                          focusTraversable="false"
                          stylesheets="@Checkbox.css"
                          styleClass="larger-checkbox"
                          onMousePressed="#registerSelection" />
        </right>
    </BorderPane>
    <Region styleClass="horizontal-line" />
</VBox>
